<br>
<%= form_with(model: kind, local: true, html: {class: "basic-grey"}) do |form| %>
  <h1>Tipo de Contato</h1>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :kind_description %>
  </div>

  <div class="actions">
    <%= form.submit "Enviar", class: "button", class: "btn btn-primary" %>
    <%= link_to 'Back', kinds_path, class: "button", class: "btn btn-primary" %>
  </div>


  <% if kind.errors.any? %>
    <div id="error_explanation">
      <h2><%= "#{pluralize(contact.errors.count, 'error')} #{t('messages.errors')}:" %>:</h2>

      <ul>
      <% kind.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<% end %>
